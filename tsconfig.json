{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./",
    "strictNullChecks" : false,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "ormconfig.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
